{
  "manifest_version": 3,
  "name": "AFM Autofill",
  "version": "1.1.0",
  "description": "Автозагрузка и автозаполнение форм на websfm.kz",
  "icons": {
    "16": "icons/icon16.png"
  },
  "host_permissions": [
    "https://websfm.kz/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://websfm.kz/form-fm/*"
      ],
      "js": [
        "content.js",
        "payload/autofill_obs.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "AFM Autofill",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  }
}